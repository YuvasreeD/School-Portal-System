<%- include("header") -%>
<div class="addTeacher">
    <h1>Add a Teacher to the Institution</h1>
 
        <form action="/addTeacher" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">Name</label>
                <input type="text" name="nameT" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name" required>
                
              </div><br>
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" name="emailT" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>
              
            </div><br>
            <div class="form-group">
              <label for="exampleInputPassword1">Assign Password for teacher login</label>
              <input type="password" name="passwordT" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
            </div>
            <br>



            <button type="submit" class="btn btn-secondary">Add</button>


          </form>
      

</div>
<%- include("footer") -%>
